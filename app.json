{
  "expo": {
    "name": "ScalarCalc",
    "slug": "scalarcalc-app",
    "version": "6.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/app-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      // Add iOS App ID here
      "bundleIdentifier": "com.itmo.scalarcalcapp"
    },
    
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.itmo.scalarcalcapp",
      
      // ⚠️ 1. إضافة إذن AD_ID هنا مباشرةً (لنجعل Expo يضيفه)
      "permissions": [
        "com.google.android.gms.permission.AD_ID"
      ]
    },
    
    "web": {
      "favicon": "./assets/images/favicon.png",
      // Disable ads on web by not including app IDs
      "config": {
        "googleMobileAdsAppId": null 
      }
    },
    "extra": {
      "scalarCalcBanners": "ca-app-pub-4737600375746657/3340175596",
      "scalarCalcInterstitial": "ca-app-pub-4737600375746657/9979899277",
      // Provide placeholder IDs for Android and iOS
      "scalarCalcAndroidAppId": "ca-app-pub-4737600375746657~8858389291",
      "scalarCalcIosAppId": "ca-app-pub-4737600375746657~8858389291",
      "router": {},
      "eas": {
        "projectId": "3fb9df95-35cc-440c-b92f-abf8568339fc"
      }
    },
    
    "plugins": [
      // ⚠️ 2. إضافة مُعرّف AdMob باستخدام Manifest Placeholders
      // هذا يُجبر مُعرّف التطبيق على الدخول في Manifest بشكل مباشر
      [
        "expo-build-properties",
        {
          "android": {
            "manifestPlaceholders": {
              "googleMobileAdsAppId": "ca-app-pub-4737600375746657~8858389291"
            },
            "enableProguardInReleaseBuilds": true,
            "extraProguardRules": "-keep class com.itmo.scalarcalcapp.** { *; }"
          }
        }
      ],
      "expo-font",
      "expo-router",
      "expo-web-browser",
      
      // ⚠️ 3. إضافة المكوّن الإضافي الخاص بالإعلانات (لربط المكتبات)
      "react-native-google-mobile-ads"
    ]
  }
}
